.header_top{
    width: 100%;
    height: 88rpx;
    background: #0dc441;
    overflow: hidden;
    text-align: center
}
.header_list{
    display: inline-block;
    margin: 11rpx auto 0rpx;
    border-radius:50rpx ;
    background:rgba(100,255,255,0.5);
    overflow: hidden;
}
text{
    display: inline-block;
    font-style: normal;
    padding: 2rpx 32rpx;
    text-align: center;
    line-height: 56rpx;
    color: #fff;
    font-size: 24rpx;
}
.hot_icon{
    background:rgba(100,217,133,0.5);
}
.focus_icon{
    background:rgba(61,208,103,0.5);
}
.nav{
    overflow: hidden;
    display: flex;
    background: #fff;
}
.nav_item{
    flex: 1;
    height: 60rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 65rpx;
    color: mediumblue;
}
.nav_item.active{
    color: #0dc441;
    border-bottom: 5px solid #0dc441
}
.scrollView{
    display: flex;
    flex-direction:row;
}
.scroll-view-item{
    width: 9.7rem;
    display: inline-block;
    border: 1px solid #aaa;
}
